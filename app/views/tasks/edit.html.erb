<h1>Edit a Task</h1>

<%= form_for @task, url: update_path do |f| %>
<ul>
  <li>
    <%= f.label :title  %>
    <%= f.text_field :title %>
  </li>

  <li>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </li>

  <li>
    <%= f.label :completed? %>
    <%= f.check_box :is_complete %>
  </li>


  <li>Completed at: <%=@task [:complete_at] %></li>
</ul>

<%= f.submit :Update %>

<% end %>
